<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="edu.gvsu.cis.convcalc">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".ConversionApp"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:label="@string/title_activity_history"
      android:name=".HistoryActivity"
      android:theme="@style/AppTheme.NoActionBar" />

    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:label="@string/title_activity_my_settings"
      android:name=".MySettingsActivity"
      android:theme="@style/AppTheme.NoActionBar" />
    <service
      android:exported="false"
      android:name=".WeatherService"></service>

    <service
      android:exported="false"
      android:name=".WeatherService.java" />
  </application>

</manifest>